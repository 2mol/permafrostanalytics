extends navbar

block page
    script(src="/javascripts/tags.js")

    div(class="uk-container padding-top-card")
        div(class="uk-card uk-card-default uk-card-body")
            h1(class="event-card-title",  id=name)=name
            h3(class="event-card-time center")=time
            h3(style="font-weight:bold") What happened
            p=description
            h3(style="font-weight:bold; width:8rem; display:inline-block;") Severity
            if severity<2
                span(class="uk-label uk-label-success severity-label")="Usual"
            else
                span(class="uk-label uk-label-warning severity-label")="Unusual"


            div(class="uk-container")
                div(class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider)
                    ul(class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-3@m")
                        li
                            img(src="/images/20170104_155210.JPG.png")
                        li
                            img(src="/images/20170104_161610.JPG.png")
                        li
                            img(src="/images/20170104_161610.JPG.png")
                        li
                            img(src="/images/20170104_164407.JPG.png")
                    a(class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous")
                    a(class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next")

            div(id="plot_data" style="width:100%")
            script(src="../javascripts/event.js")

            div(class="uk-container container-tag")
                form
                    fieldset(class="uk-fieldset")
                        legend(class="uk-legend", style="font-weight: bold;") Help us labeling this event!
                        div(class="uk-margin")
                            input(class="tag-input uk-input ", type="text", name="tag", placeholder="Insert a tag", id="tag-form")
                            button(class="uk-button uk-button-primary uk-button-small", style="height:2.3rem !important;", id="tagbutton")="Add tag"

                div(id="labels", style="margin-top:20px")